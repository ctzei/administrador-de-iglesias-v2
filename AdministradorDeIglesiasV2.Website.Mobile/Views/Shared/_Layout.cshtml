<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;"/>
    <meta name="HandheldFriendly" content="true"/> 
    @{if (string.IsNullOrEmpty(@ViewBag.Title))
      {
       <title>AdmI</title>
      }
      else
      {
          <title>AdmI - @ViewBag.Title</title>
      }
    }
    <link href="@Url.Content("~/Content/general.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery.loadmask.css")" rel="stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/lib/modernizr-2.6.2.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/lib/json2.js")" type="text/javascript"></script>
    @RenderSection("head", false)
</head>
<body ontouchstart="">
    @RenderBody()

    <script src="@Url.Content("~/Scripts/lib/jquery.loadmask.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/lib/jquery.placeholder.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/lib/jquery.ztouch.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/lib/general.js")" type="text/javascript"></script>
    @RenderSection("footer", false)

    @if (bool.Parse(System.Web.Configuration.WebConfigurationManager.AppSettings["GoogleAnalyticsEnabled"]))
    {
        <script type="text/javascript">
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', '@System.Web.Configuration.WebConfigurationManager.AppSettings["GoogleAnalyticsId"]']);
            _gaq.push(['_trackPageview']);

            (function () {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();
        </script>
    }
</body>
</html>
